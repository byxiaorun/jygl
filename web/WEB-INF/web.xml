<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <session-config> <session-timeout>8</session-timeout> </session-config>

    <filter>
        <filter-name>ecodingFilter</filter-name>
        <filter-class>jygl.filter.Filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ecodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>loginServlet</servlet-name>
        <servlet-class>jygl.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>jygl.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>studentManagerServlet</servlet-name>
        <servlet-class>jygl.controller.StudentManagerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>companyManageServlet</servlet-name>
        <servlet-class>jygl.controller.CompanyManageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userManageServlet</servlet-name>
        <servlet-class>jygl.controller.UserManageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>layoutServlet</servlet-name>
        <servlet-class>jygl.controller.LayoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>employmentManageServlet</servlet-name>
        <servlet-class>jygl.controller.EmploymentManageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>recruitServlet</servlet-name>
        <servlet-class>jygl.controller.RecruitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>messageServlet</servlet-name>
        <servlet-class>jygl.controller.MessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>resumeServlet</servlet-name>
        <servlet-class>jygl.controller.ResumeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>studentManagerServlet</servlet-name>
        <url-pattern>/studentManage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>companyManageServlet</servlet-name>
        <url-pattern>/companyManage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userManageServlet</servlet-name>
        <url-pattern>/userManage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>layoutServlet</servlet-name>
        <url-pattern>/layout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>employmentManageServlet</servlet-name>
        <url-pattern>/employmentManage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>recruitServlet</servlet-name>
        <url-pattern>/recruitManage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>messageServlet</servlet-name>
        <url-pattern>/messageManage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resumeServlet</servlet-name>
        <url-pattern>/resumeManage</url-pattern>
    </servlet-mapping>
</web-app>